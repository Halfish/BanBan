<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 第一行：地址 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_address"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/cont_descrip"
            android:src="@drawable/bb_location" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/bb_address" />

        <TextView
            android:id="@+id/tv_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/bb_address_panyu" />
    </LinearLayout>

    <!-- 第二行：电话 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/cont_descrip"
            android:src="@drawable/bb_phone" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/bb_phone" />

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/bb_phone_num" />
    </LinearLayout>

    <!-- 第三行：商家详情 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp" >

        <ImageView
            android:id="@+id/img_store"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/cont_descrip"
            android:src="@drawable/bb_store" />

        <TextView
            android:id="@+id/tv_store_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_store"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:text="@string/bb_store_detail" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_store_detail_zhishan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:singleLine="false"
        android:maxLines="20"
        android:lineSpacingExtra="8dp"
        android:scrollbars="vertical"
        android:text="@string/bb_store_detail_zhishan" />

</LinearLayout>