<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dip"  
    >
        
<com.android.volley.toolbox.NetworkImageView 
    android:id="@+id/itemImageT"
    android:layout_width="130dp"
    android:layout_height="100dp" 
    android:layout_centerHorizontal="true"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:src="@drawable/moren" />

<TextView
    android:id="@+id/itemText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/itemImageT"
    android:layout_alignRight="@+id/itemImageT"
    android:layout_below="@+id/itemImageT"
    android:text="@string/name" />
<TextView
    android:id="@+id/itemText2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/itemImageT"
    android:layout_alignRight="@+id/itemImageT"
    android:layout_below="@+id/itemText"
    android:text="@string/c_price" />

<ImageButton
    android:id="@+id/imageButton1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/itemImageT"
    android:layout_alignLeft="@+id/itemImageT"
    android:background="#00000000"
    android:focusable="false"
    android:src="@android:drawable/ic_menu_delete" />

<ImageButton
    android:id="@+id/imageButton2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/itemImageT"
    android:layout_alignRight="@+id/itemImageT"
    android:background="#00000000" 
    android:focusable="false"
    android:src="@android:drawable/ic_menu_edit" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/itemText"
    android:layout_below="@+id/itemText"
    android:text="@string/c_num" />
	
</RelativeLayout>
